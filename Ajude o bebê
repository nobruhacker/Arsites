  <script>
    // Número usado (formato internacional sem + ou espaços)
    const whatsNumber = "244946224756";

    // Copiar referência e texto sugerido
    document.getElementById('copyRefBtn').addEventListener('click', ()=> {
      copyToClipboard("946224756");
    });
    document.getElementById('copySugBtn').addEventListener('click', ()=> {
      copyToClipboard("DOAR - [Seu nome]");
    });

    // Abrir chat sem mensagem
    document.getElementById('openChatBtn').addEventListener('click', ()=>{
      const url = "https://wa.me/" + whatsNumber;
      window.open(url, "_blank");
    });

    // Copiar mensagem gerada
    document.getElementById('copyMsgBtn').addEventListener('click', ()=>{
      const msg = buildMessagePreview();
      copyToClipboard(msg);
    });

    function copyToClipboard(text){
      navigator.clipboard?.writeText(text).then(()=> {
        alert("Copiado para a área de transferência");
      }).catch(()=> {
        prompt("Copie manualmente:", text);
      });
    }

    // Cria a mensagem conforme os campos do formulário
    function buildMessagePreview(){
      const nome = document.getElementById('nome').value.trim();
      const valor = document.getElementById('valor').value.trim();
      const banco = document.getElementById('banco').value.trim();
      const data = document.getElementById('data').value.trim();
      const obs = document.getElementById('obs').value.trim();

      let lines = [];
      lines.push("Olá, boa tarde. Fiz uma doação para o bebê.");
      if(nome) lines.push("Nome: " + nome);
      if(valor) lines.push("Valor: AOA " + valor);
      if(banco) lines.push("Banco/App: " + banco);
      if(data) lines.push("Data: " + data);
      lines.push("Referência utilizada: 946224756 (Angola)");
      if(obs) lines.push("Observações: " + obs);
      lines.push("");
      lines.push("Obrigado. Por favor confirmar o recebimento quando possível.");

      return lines.join("%0A"); // retorna já codificada para URL (quebra de linha %0A)
    }

    // Envia para o WhatsApp (abre wa.me com mensagem)
    function sendWhatsApp(){
      const encodedMessage = buildMessagePreview();
      const url = "https://wa.me/" + whatsNumber + "?text=" + encodedMessage;
      window.open(url, "_blank");
      return false; // previne reload
    }
  </script>
